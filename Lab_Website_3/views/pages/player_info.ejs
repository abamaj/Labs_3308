<%- include('../partials/header') %>
<%- include('../partials/menu') %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
					<%
					var image_src = '../resources/img/helmet.jpg';
					%>
					<img class="card-img-top" id="player_img" src="<%- img_src || image_src %>" alt="Image of Football Player">
					<div class="card-body mx-auto">
						<form class="form" action="/player_info/post" method="get">
							<select class="custom-select" name="player_choice" onchange="this.form.submit()">

				<%let n = 0%>
				<%while(n < players.length){ %>
					<option value="<%= players[n].id %>">
						<%= players[n].name %>
						<% 	n++; %>
					</option>
				<% } %>
				<img class="card-img-top" id="player_img" src="<%- img_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<th>Year</th>
							<td><%= player.year %></td>
						</tr>
						<tr>
							<th>Major</th>
							<td><%= player.major %></td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><%= games.length %></td>
						</tr>
						<tr>
							<td>Passing Yards: <%= player.passing_yards %></td>
							<td>Avg. Passing Yards: <%= player.passing_yards / games.length %></td>
						</tr>
						<tr>
							<td>Rushing Yards: <%= player.rushing_yards %></td>
							<td>Avg. Rushing Yards: <%= player.rushing_yards / games.length %></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%= player.receiving_yards %></td>
							<td>Av<g. Receiving Yards: <%= player.receiving_yards / games.length %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<%- include('../partials/footer') %>